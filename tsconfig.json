{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2021.String", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@elizaos/core": ["packages/core/typescript/src"],
      "@elizaos/core/*": ["packages/core/typescript/src/*"],
      "@elizaos/plugin-sql": ["plugins/plugin-sql/typescript/index.ts"],
      "@elizaos/plugin-sql/*": ["plugins/plugin-sql/typescript/*"],
      "@elizaos/plugin-bootstrap": ["plugins/plugin-bootstrap/typescript/index.ts"],
      "@elizaos/plugin-bootstrap/*": ["plugins/plugin-bootstrap/typescript/*"],
      "@elizaos/plugin-openai": ["plugins/plugin-openai/typescript/index.ts"],
      "@elizaos/plugin-openai/*": ["plugins/plugin-openai/typescript/*"]
    }
  }
}
