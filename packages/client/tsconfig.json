{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../core/configs/typescript/tsconfig.frontend.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client", "node", "@testing-library/jest-dom"],
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/__tests__/**/*.ts",
    "src/__tests__/**/*.tsx",
    "vite.config.ts",
    "vitest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cypress"
  ]
}
