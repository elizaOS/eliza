{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Eliza Desktop",
  "version": "1.0.12",
  "identifier": "com.elizaos.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ElizaOS Platform",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "img-src": "'self' data: asset: https://asset.localhost http://localhost:3000 http://localhost:3333 https://*.elizaos.com",
        "connect-src": "'self' http://localhost:3000 ws://localhost:3000 http://localhost:3333 https://localhost:* capacitor://* tauri://* https://api.eliza.how https://*.elizaos.com https://*.workos.com",
        "style-src": "'self' 'unsafe-inline' http://localhost:3000 http://localhost:3333",
        "script-src": "'self' 'unsafe-eval' http://localhost:3000 http://localhost:3333",
        "frame-src": "'self' http://localhost:3000 http://localhost:3333"
      }
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "externalBin": [],
    "resources": [],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "",
    "longDescription": "",
    "useBootstrapper": false
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
