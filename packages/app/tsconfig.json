{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../core/configs/typescript/tsconfig.frontend.json",
  "compilerOptions": {
    "target": "ES2021",
    "useDefineForClassFields": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["@types/bun"],
    "paths": {
      "@elizaos/client": ["../client/dist/lib/index.d.ts"],
      "@elizaos/client/css": ["../client/dist/lib/client.css"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
