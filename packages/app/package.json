{
  "name": "@elizaos/app",
  "version": "1.0.12",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' npm run typecheck && NODE_OPTIONS='--max-old-space-size=4096' vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "test": "bun test --timeout 30000",
    "test:unit": "bun test src/**/*.test.tsx --timeout 10000",
    "test:integration": "bun test src/__tests__/integration/*.test.ts --timeout 30000",
    "test:e2e": "bun test src/__tests__/e2e/*.test.ts --timeout 60000",
    "test:auth": "bun test src/__tests__/integration/auth-runtime-integration.test.ts src/__tests__/integration/platform-auth-flow.test.ts --timeout 30000",
    "test:coverage": "bun test --coverage --timeout 30000",
    "test:watch": "bun test --watch --timeout 30000",
    "tauri:dev": "NODE_OPTIONS='--max-old-space-size=4096' tauri dev",
    "tauri:build": "NODE_OPTIONS='--max-old-space-size=4096' tauri build",
    "typecheck": "NODE_OPTIONS='--max-old-space-size=4096' tsc --noEmit",
    "lint": "eslint src --fix && prettier --write ./src",
    "lint:check": "eslint src && prettier --check ./src",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src"
  },
  "dependencies": {
    "@elizaos/client": "workspace:*",
    "@elizaos/core": "workspace:*",
    "@tauri-apps/api": "^2.3.0",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-shell": "^2",
    "react": "^19.1.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@tauri-apps/cli": "^2",
    "@testing-library/react": "^16.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/bun": "^1.2.17",
    "@types/node": "^24.0.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.22.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "happy-dom": "^18.0.1",
    "prettier": "3.5.3",
    "typescript": "5.8.3",
    "vite": "^6.0.3"
  },
  "gitHead": "b165ad83e5f7a21bc1edbd83374ca087e3cd6b33"
}
