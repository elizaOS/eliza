{
  "name": "@elizaos/plugin-payment",
  "version": "1.0.0",
  "description": "Payment integration plugin for ElizaOS with wallet services and payment middleware",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "bun run build.ts",
    "dev": "bun run build.ts --watch",
    "clean": "rm -rf dist && rm -rf .turbo",
    "lint": "eslint src --fix && prettier --write ./src",
    "typecheck": "tsc --noEmit",
    "test": "elizaos test"
  },
  "dependencies": {
    "@elizaos/core": "workspace:*",
    "@elizaos/plugin-agentkit": "workspace:*",
    "@elizaos/plugin-evm": "workspace:*",
    "@elizaos/plugin-solana": "workspace:*",
    "@elizaos/plugin-secrets-manager": "workspace:*",
    "@elizaos/plugin-trust": "workspace:*",
    "@elizaos/plugin-tasks": "workspace:*",
    "decimal.js": "^10.4.3",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@elizaos/plugin-sql": "workspace:*",
    "@eslint/js": "^9.29.0",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "rimraf": "^6.0.1",
    "typescript": "5.8.3"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "elizaos",
    "plugin",
    "payment",
    "wallet",
    "cryptocurrency",
    "blockchain"
  ],
  "author": "ElizaOS Contributors",
  "license": "MIT"
}
