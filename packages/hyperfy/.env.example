# Server Configuration
PORT=3000
WS_PORT=4445
WORLD=world
SAVE_INTERVAL=60

# Feature Flags
ENABLE_RPG=false

# ==========================================
# SERVER-ONLY SECRETS (Never expose to client)
# ==========================================

# Authentication Secret - Used for JWT tokens
# Generate a secure random string for production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin Code - Used to grant admin access via /admin command
# Leave empty to allow everyone to be admin (dev mode)
ADMIN_CODE=

# LiveKit API Secret - Used to generate access tokens on the server
# Get this from your LiveKit dashboard
LIVEKIT_API_SECRET=

# ==========================================
# CLIENT-SAFE VARIABLES (Can be exposed to client)
# ==========================================

# LiveKit Configuration
LIVEKIT_URL=wss://your-livekit-instance.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key

# Public URLs
PUBLIC_API_URL=http://localhost:3000
PUBLIC_ASSETS_URL=/assets/
PUBLIC_MAX_UPLOAD_SIZE=104857600

# Hyperfy Configuration
HYPERFY_ASSETS_URL=
HYPERFY_ASSETS_DIR=
HYPERFY_NETWORK_RATE=8
HYPERFY_MAX_DELTA_TIME=0.033333
HYPERFY_FIXED_DELTA_TIME=0.016666
HYPERFY_LOG_LEVEL=info
HYPERFY_PHYSICS_ENABLED=true
HYPERFY_GRAVITY_X=0
HYPERFY_GRAVITY_Y=-9.81
HYPERFY_GRAVITY_Z=0

# Build Configuration
CLIENT_BUILD_DIR=
NO_CLIENT_SERVE=
COMMIT_HASH=
