{
  "name": "@elizaos/hyperfy",
  "version": "0.13.0",
  "type": "module",
  "main": "build/lib/index.js",
  "types": "build/lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./build/lib/index.d.ts",
      "import": "./build/lib/index.js"
    }
  },
  "homepage": "https://github.com/hyperfy-xyz/hyperfy#readme",
  "bugs": {
    "url": "https://github.com/hyperfy-xyz/hyperfy/issues"
  },
  "keywords": [
    "hyperfy",
    "3d",
    "components",
    "virtual-worlds",
    "metaverse",
    "three.js",
    "webgl",
    "real-time"
  ],
  "scripts": {
    "dev": "node scripts/build-dev.mjs",
    "build": "node scripts/build-production.mjs && node scripts/build-lib.mjs",
    "dev:vite": "vite --port 3001",
    "build:vite": "vite build",
    "preview:vite": "vite preview",
    "dev:legacy": "node scripts/build.mjs --dev",
    "build:legacy": "node scripts/build.mjs",
    "start": "bun build/index.js",
    "world:clean": "node scripts/clean-world.mjs",
    "rpg:server": "npm run build && bun build/server/rpg-server.js",
    "rpg:dev": "npm run dev && bun build/server/rpg-server.js",
    "viewer:dev": "node scripts/build-viewer.mjs --dev",
    "viewer:build": "node scripts/build-viewer.mjs",
    "client:dev": "node scripts/build-client.mjs --dev",
    "client:build": "node scripts/build-client.mjs",
    "node-client:dev": "node scripts/build-node-client.mjs --dev",
    "node-client:build": "node scripts/build-node-client.mjs",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "check": "npm run lint && npm run format",
    "publish:node": "node scripts/build-node-client.mjs && npm publish",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:ui": "bun test --ui",
    "test:run": "bun test",
    "test:coverage": "bun test --coverage",
    "test:bench": "bun test --bench",
    "test:e2e": "bun test src/__tests__/e2e",
    "test:visual": "node scripts/visual-test.mjs",
    "test:visual:loop": "node scripts/visual-test-loop.mjs",
    "test:ci": "bun test",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "build:types": "bun run typecheck && tsc --emitDeclarationOnly && dts-bundle-generator -o build/index.d.ts src/server/index.ts",
    "dev:no-typecheck": "node scripts/build-dev.mjs --no-typecheck",
    "build:no-typecheck": "node scripts/build-production.mjs --no-typecheck",
    "clean": "rm -rf build dist",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "files": [
    "build/lib/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@fastify/compress": "^8.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/multipart": "^9.0.1",
    "@fastify/static": "^8.0.1",
    "@fastify/websocket": "^11.0.1",
    "@pixiv/three-vrm": "^3.3.3",
    "d3": "^7.9.0",
    "dotenv-flow": "^4.1.0",
    "drizzle-kit": "^0.31.2",
    "drizzle-orm": "^0.44.2",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "eventemitter3": "^5.0.1",
    "fastify": "^5.0.0",
    "find-cache-dir": "^5.0.0",
    "fs-extra": "^11.2.0",
    "hls.js": "^1.6.1",
    "jsonwebtoken": "^9.0.2",
    "livekit-client": "^2.9.9",
    "livekit-server-sdk": "^2.11.0",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.469.0",
    "moment": "^2.30.1",
    "msgpackr": "^1.11.0",
    "nanoid": "^5.0.6",
    "postprocessing": "^6.36.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ses": "^1.10.0",
    "source-map-support": "^0.5.21",
    "three": "^0.173.0",
    "three-mesh-bvh": "^0.8.3",
    "yoga-layout": "^3.2.1"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.23.10",
    "@babel/preset-react": "^7.23.10",
    "@playwright/test": "^1.53.1",
    "@types/bun": "^1.2.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.9.3",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/source-map-support": "^0.5.10",
    "@types/three": "^0.169.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-react": "^4.6.0",
    "chokidar": "^4.0.3",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.25.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^25.0.1",
    "playwright": "^1.53.1",
    "prettier": "^3.4.2",
    "puppeteer": "^24.10.2",
    "sharp": "^0.33.5",
    "tsx": "^4.19.2",
    "typescript": "5.8.3",
    "vite": "^6.3.5"
  },
  "peerDependencies": {
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7"
  },

  "engines": {
    "npm": ">=10.0.0",
    "node": "22.11.0"
  },
  "overrides": {
    "three": "^0.173.0"
  },
  "license": "GPL-3.0-only"
}
