{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./typescript",
    "outDir": "./dist",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "noEmit": false
  },
  "include": ["typescript/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "rust",
    "python",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "typescript/__tests__/**"
  ]
}
