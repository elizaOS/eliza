{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": [],
    "typeRoots": ["./src/types", "../../node_modules/@types"],
    "strict": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "emitDeclarationOnly": false,
    "noEmit": false
  },
  "include": ["src/**/*", "src/types/**/*.d.ts"],
  "exclude": ["dist", "node_modules", "src/**/*.test.ts", "src/__tests__/**/*", "src/auth/*.test.ts"]
}
