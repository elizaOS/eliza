{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "bun"],
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "@elizaos/plugin-sql": ["../../plugins/plugin-sql/src/index.ts"]
    }
  },
  "include": ["typescript/src/**/*.ts"],
  "exclude": [
    "typescript/src/**/*.test.ts",
    "typescript/src/**/*.spec.ts",
    "typescript/src/__tests__/**/*",
    "node_modules",
    "dist"
  ]
}
