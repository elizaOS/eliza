{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../core/configs/typescript/tsconfig.frontend.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "downlevelIteration": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@lib/*": ["./lib/*"],
      "@elizaos/client": ["../client/dist/lib/index"],
      "@elizaos/client/css": ["../client/dist/lib/client.css"],
      "@elizaos/core": ["../core/src/index.ts"],
      "@elizaos/server": ["../server/src/index.ts"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "cypress",
    "drizzle.config.ts",
    "cypress.config.ts"
  ]
}
