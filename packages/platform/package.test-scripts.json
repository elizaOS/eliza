{
  "scripts": {
    "test:integration": "jest --config jest.config.integration.js --runInBand",
    "test:integration:watch": "jest --config jest.config.integration.js --runInBand --watch",
    "test:integration:coverage": "jest --config jest.config.integration.js --runInBand --coverage",
    "test:integration:stripe": "jest --config jest.config.integration.js --runInBand --testPathPattern='stripe-integration'",
    "test:integration:webhook": "jest --config jest.config.integration.js --runInBand --testPathPattern='webhook-security'",
    "test:integration:crypto": "jest --config jest.config.integration.js --runInBand --testPathPattern='crypto-payment'",
    "test:integration:e2e": "jest --config jest.config.integration.js --runInBand --testPathPattern='end-to-end'",
    "test:all": "npm run test && npm run test:integration",
    "test:billing": "jest --config jest.config.integration.js --runInBand --testPathPattern='billing'",
    "test:debug": "jest --config jest.config.integration.js --runInBand --verbose --detectOpenHandles",
    "test:ci": "jest --config jest.config.integration.js --runInBand --coverage --ci --watchAll=false"
  },
  "devDependencies": {
    "@elizaos/core": "workspace:*",
    "@elizaos/server": "workspace:*",
    "@elizaos/client": "workspace:*",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "ts-jest": "^29.1.1"
  }
}