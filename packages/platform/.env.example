# ElizaOS Platform Environment Configuration
# Copy this file to .env.local and fill in your values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/elizaos_platform
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=
DB_NAME=elizaos_platform
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30

# Redis Configuration (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long

# WorkOS SSO Configuration
WORKOS_API_KEY=sk_your_workos_api_key
WORKOS_CLIENT_ID=your_workos_client_id
WORKOS_REDIRECT_URI=http://localhost:3333/auth/callback
WORKOS_ENVIRONMENT=staging

# Stripe Billing Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PRO_PRICE_ID=price_your_pro_price_id
STRIPE_ENTERPRISE_PRICE_ID=price_your_enterprise_price_id

# Cloudflare R2 Storage Configuration
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=elizaos-platform-storage
R2_PUBLIC_URL=https://your-bucket.your-domain.com

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3333
NEXT_PUBLIC_API_URL=http://localhost:3333/api
NODE_ENV=development

# Analytics (Optional)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=localhost:3333
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@elizaos.ai

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-for-external-integrations

# Feature Flags
FEATURE_CRYPTO_PAYMENTS=true
FEATURE_AUTO_TOPUP=true
FEATURE_PLUGIN_WHITELIST=true

# Development Configuration
SKIP_EMAIL_VERIFICATION=true
ENABLE_DEV_LOGIN=true
LOG_LEVEL=debug

# =============================================================================
# TAURI APP CONFIGURATION
# =============================================================================

# Build Mode for static exports (for Tauri)
BUILD_MODE=default

# Tauri app signing
TAURI_SIGNING_PRIVATE_KEY=your-tauri-private-key
TAURI_SIGNING_PRIVATE_KEY_PASSWORD=your-private-key-password

# Apple Code Signing (macOS)
APPLE_CERTIFICATE_ID=Developer ID Application: Your Name
APPLE_ID=your-apple-id@example.com
APPLE_PASSWORD=your-app-specific-password

# Windows Code Signing
WINDOWS_CERTIFICATE_PATH=path/to/certificate.p12
WINDOWS_CERTIFICATE_PASSWORD=certificate-password

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Vercel Configuration
VERCEL_TOKEN=your-vercel-token
VERCEL_ORG_ID=your-org-id
VERCEL_PROJECT_ID=your-project-id

# GitHub Configuration
GITHUB_TOKEN=ghp_your-github-token

# Health check configuration
HEALTH_CHECK_URL=http://localhost:3333/api/health

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# =============================================================================
# ISOMORPHIC AUTH CONFIGURATION
# =============================================================================

# OAuth redirect URIs for different platforms
NEXT_PUBLIC_WORKOS_CLIENT_ID=your_workos_client_id
WORKOS_WEB_REDIRECT_URI=http://localhost:3333/auth/callback
WORKOS_TAURI_REDIRECT_URI=elizaos://auth/callback

# API Base URL for Tauri apps
NEXT_PUBLIC_API_BASE_URL=http://localhost:3333/api

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# For production deployments, override these values:
# NEXT_PUBLIC_APP_URL=https://platform.elizaos.com
# NEXT_PUBLIC_API_BASE_URL=https://api.platform.elizaos.com
# DATABASE_URL=postgresql://user:pass@prod-db:5432/elizaos_platform
# REDIS_URL=redis://prod-redis:6379
# NODE_ENV=production