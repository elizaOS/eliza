{
  "name": "@elizaos/plugin-GTK",
  "description": "ElizaOS plugin for Sifchain GTK margin trading platform",
  "version": "1.0.0",
  "private": false,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "github:elizaos-plugins/plugin-GTK"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@elizaos/cli": "1.0.0-beta.26",
    "@elizaos/core": "1.0.0-beta.26",
    "@sifchain/gtk-api": "1.0.1",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "prettier": "3.5.3",
    "tsup": "8.4.0",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "start": "npx @elizaos/cli start",
    "test-with-cli": "cd ../cli && bun run build && cd ../plugin-starter && elizaos test",
    "dev": "npx @elizaos/cli dev",
    "build": "tsup",
    "lint": "prettier --write ./src",
    "test": "npx @elizaos/cli test",
    "publish": "npx @elizaos/cli plugin publish",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src"
  },
  "publishConfig": {
    "access": "public"
  },
  "resolutions": {
    "zod": "3.24.2"
  },
  "platform": "universal",
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "API_KEY": {
        "type": "string",
        "description": "API key for the GTK service"
      },
      "MNEMONIC": {
        "type": "string",
        "description": "Mnemonic for the Sifchain wallet"
      },
      "NETWORK": {
        "type": "string",
        "description": "Network to connect to (mainnet or testnet)",
        "default": "mainnet"
      }
    }
  },
  "keywords": [
    "elizaos",
    "plugin",
    "sifchain",
    "gtk",
    "trading",
    "margin",
    "cryptocurrency"
  ],
  "author": "ElizaOS GTK Plugin Team",
  "license": "MIT"
}
