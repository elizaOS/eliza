{
  "name": "@elizaos/plugin-agentkit",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@coinbase/agentkit": "^0.8.2",
    "@coinbase/cdp-sdk": "^1.16.0",
    "@elizaos/core": "workspace:*",
    "@elizaos/plugin-trust": "workspace:*",
    "tsup": "8.3.5"
  },
  "devDependencies": {
    "vitest": "^3.0.0",
    "@types/node": "^20.0.0",
    "@types/cypress": "^1.1.0",
    "cypress": "^13.0.0"
  },
  "scripts": {
    "build": "tsup --format esm --dts",
    "dev": "tsup --format esm --dts --watch",
    "test": "elizaos test",
    "test:watch": "vitest watch",
    "test:e2e": "elizaos test",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint .",
    "lint:fix": "biome check --apply .",
    "format": "biome format .",
    "format:fix": "biome format --write ."
  },
  "publishConfig": {
    "access": "public"
  },
  "agentConfig": {
    "pluginType": "elizaos:client:1.0.0",
    "pluginParameters": {
      "CDP_API_KEY_NAME": {
        "type": "string",
        "minLength": 1,
        "description": "your_key_name",
        "optional": false
      },
      "CDP_API_KEY_PRIVATE_KEY": {
        "type": "string",
        "minLength": 1,
        "description": "your_private_key",
        "optional": false
      },
      "CDP_AGENT_KIT_NETWORK": {
        "type": "string",
        "minLength": 1,
        "description": "Optional: Defaults to base-sepolia",
        "optional": true
      }
    }
  }
}
