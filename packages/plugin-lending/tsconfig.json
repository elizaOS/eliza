{
  "extends": "@elizaos/core/configs/typescript/tsconfig.plugin.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@elizaos/core": ["../core/src"]
    },
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts", "src/**/__tests__/**", "dist", "node_modules"]
}