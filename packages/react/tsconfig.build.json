{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "declarationDir": "./dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "skipLibCheck": true,
        "noEmit": false,
        "allowImportingTsExtensions": false,
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "node",
            "bun"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "**/*.spec.ts"
    ]
}