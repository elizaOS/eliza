{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "isolatedModules": false,
    "baseUrl": ".",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "paths": {
      "@/*": ["*"],
      "@elizaos/core": ["../core/dist/index.js"]
    },
    "rootDir": "src",
    "moduleResolution": "Node",
    "outDir": "./dist"
  },
  "paths": {
    "@elizaos/core": ["../core/src"],
    "@elizaos/core/*": ["../core/src/*"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
