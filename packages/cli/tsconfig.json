{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../core/configs/typescript/tsconfig.frontend.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["./src/*"]
    },
    "jsx": "react",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": false
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "scenarios",
    "templates",
    "src/commands/auth/services/auth-service.ts"
  ]
}
