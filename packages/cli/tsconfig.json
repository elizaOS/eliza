{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "isolatedModules": false,
    "baseUrl": ".",
    "module": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "paths": {
      "@/src/*": [
        "./src/*"
      ],
      "@elizaos/core": [
        "../../core/src"
      ],
      "@elizaos/core/*": [
        "../../core/src/*"
      ]
    },
    "rootDir": ".",
    "moduleResolution": "node16",
    "outDir": "./dist",
    "jsx": "react",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "node",
      "bun"
    ],
    "typeRoots": [
      "./tests/types",
      "../../node_modules/@types",
      "./node_modules/@types"
    ],
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}