{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../core/tsconfig.json",
  "compilerOptions": {
    "isolatedModules": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "rootDir": "src",
    "moduleResolution": "Node",
    "module": "ESNext",
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
