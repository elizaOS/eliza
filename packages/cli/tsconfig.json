{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "isolatedModules": false,
    "baseUrl": ".",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "paths": {
      "@/*": ["./*"],
      "@elizaos/core": ["../../packages/core/src"],
      "@elizaos/core/*": ["../../packages/core/src/*"]
    },
    "rootDir": "src",
    "moduleResolution": "Node",
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
