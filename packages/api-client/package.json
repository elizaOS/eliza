{
  "name": "@elizaos/api-client",
  "version": "1.0.12",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.js",
  "description": "Type-safe API client for ElizaOS server",
  "type": "module",
  "scripts": {
    "build": "npm run typecheck && node build.ts",
    "dev": "node build.ts --watch",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "lint": "eslint src --fix && prettier --write ./src",
    "lint:check": "eslint src && prettier --check ./src",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src"
  },
  "dependencies": {
    "@elizaos/core": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "latest",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.22.0",
    "prettier": "3.5.3",
    "typescript": "5.8.3"
  },
  "files": [
    "dist"
  ]
}
