{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node", "bun"],
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "@elizaos/core": ["packages/typescript/src/index.ts"],
      "@elizaos/core/*": ["packages/typescript/src/*"],
      "@elizaos/plugin-sql": ["../../plugins/plugin-sql/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/__tests__/**",
    "vitest.config.ts",
    "node_modules",
    "dist"
  ]
}
