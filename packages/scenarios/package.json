{
  "name": "@elizaos/scenarios",
  "version": "0.2.0",
  "private": false,
  "description": "Comprehensive test scenarios for ElizaOS agents and plugins",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./test": {
      "import": "./dist/test-runner.js",
      "types": "./dist/test-runner.d.ts"
    }
  },
  "bin": {
    "scenario-runner": "./dist/test-runner.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "tsx src/test-runner.ts",
    "test:scenarios": "tsx src/test-runner.ts",
    "test:real": "tsx src/run-real-tests.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@elizaos/core": "workspace:*",
    "@elizaos/server": "workspace:*",
    "@elizaos/plugin-sql": "workspace:*",
    "@elizaos/plugin-github": "workspace:*",
    "@elizaos/plugin-todo": "workspace:*",
    "@elizaos/plugin-trust": "workspace:*",
    "@elizaos/plugin-rolodex": "workspace:*",
    "@elizaos/plugin-planning": "workspace:*",
    "@elizaos/plugin-research": "workspace:*",
    "@elizaos/plugin-knowledge": "workspace:*",
    "@elizaos/plugin-solana": "workspace:*",
    "@elizaos/plugin-evm": "workspace:*",
    "@elizaos/plugin-payment": "workspace:*",
    "@elizaos/plugin-secrets-manager": "workspace:*",
    "@elizaos/plugin-plugin-manager": "workspace:*",
    "@elizaos/plugin-stagehand": "workspace:*",
    "@elizaos/plugin-agentkit": "workspace:*",
    "@elizaos/plugin-autocoder": "workspace:*",
    "@elizaos/plugin-auton8n": "workspace:*",
    "@elizaos/plugin-autonomy": "workspace:*",
    "@elizaos/plugin-goals": "workspace:*",
    "@elizaos/plugin-mcp": "workspace:*",
    "@elizaos/plugin-ngrok": "workspace:*",
    "@elizaos/plugin-tasks": "workspace:*",
    "uuid": "^10.0.0",
    "chalk": "^5.3.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@types/yargs": "^17.0.33",
    "eslint": "^8.57.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.3.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.0",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "@elizaos/core": "*"
  },
  "keywords": [
    "eliza",
    "elizaos",
    "ai",
    "agent",
    "scenarios",
    "testing",
    "plugin-testing",
    "integration-testing"
  ],
  "author": "ElizaOS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/elizaos/eliza.git",
    "directory": "packages/scenarios"
  },
  "bugs": {
    "url": "https://github.com/elizaos/eliza/issues"
  },
  "homepage": "https://github.com/elizaos/eliza#readme",
  "files": [
    "dist",
    "README.md"
  ]
}
