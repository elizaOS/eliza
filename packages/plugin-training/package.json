{
  "name": "@elizaos/plugin-training",
  "version": "0.1.0",
  "description": "ElizaOS Training Data Extraction, RLAIF Training, and Custom Reasoning with Fine-tuned Models",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./mvp": {
      "import": "./dist/mvp-only.js",
      "types": "./dist/mvp-only.d.ts"
    },
    "./enhanced": {
      "import": "./dist/enhanced-export.js",
      "types": "./dist/enhanced-export.d.ts"
    },
    "./comprehensive": {
      "import": "./dist/comprehensive-training-plugin.js",
      "types": "./dist/comprehensive-training-plugin.d.ts"
    }
  },
  "bin": {
    "eliza-training": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint . --fix && prettier --write .",
    "test": "elizaos test",
    "validate": "./scripts/run-e2e-tests.sh",
    "cli": "node dist/cli/index.js",
    "extract-data": "node dist/scripts/extract-training-data.js",
    "prepare-dataset": "node dist/scripts/prepare-dataset.js",
    "start-atropos": "python atropos/start_atropos.py",
    "train": "python atropos/run_training.py",
    "deploy": "python atropos/deploy_training.py"
  },
  "dependencies": {
    "@elizaos/core": "workspace:*",
    "@elizaos/plugin-sql": "workspace:*",
    "@huggingface/hub": "^0.20.0",
    "axios": "^1.7.7",
    "commander": "^12.1.0",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "form-data": "^4.0.0",
    "glob": "^10.3.10",
    "jsonlines": "^0.1.1",
    "node-fetch": "^3.3.2",
    "simple-git": "^3.20.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "eslint": "^8.57.1",
    "tsup": "^8.3.5",
    "typescript": "5.8.3"
  },
  "files": [
    "dist",
    "atropos",
    "scripts",
    "README.md"
  ],
  "keywords": [
    "elizaos",
    "training",
    "rlaif",
    "atropos",
    "machine-learning",
    "llm",
    "fine-tuning",
    "deepseek",
    "llama",
    "custom-reasoning",
    "together-ai",
    "anthropic-proxy",
    "autocoder",
    "should-respond",
    "planning-model",
    "coding-model"
  ],
  "author": "ElizaOS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/elizaos/eliza.git",
    "directory": "packages/plugin-training"
  },
  "bugs": {
    "url": "https://github.com/elizaos/eliza/issues"
  },
  "homepage": "https://elizaos.ai",
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.10.0"
  }
}
