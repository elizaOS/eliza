{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler", // Or "NodeNext"
    "allowImportingTsExtensions": true,
    "noEmit": true, // tsup handles emit
    "isolatedModules": true,
    "types": ["node", "vitest/globals", "@types/uuid"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "src/__tests__/**/*test.ts", "src/__tests__/**/*.spec.ts"]
}
