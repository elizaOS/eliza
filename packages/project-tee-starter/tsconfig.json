{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@elizaos/core/configs/typescript/tsconfig.plugin.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "__tests__/**/*.ts", "cypress.d.ts"],
  "exclude": ["node_modules", "dist"]
}
