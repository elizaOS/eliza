generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRISMA_DATABASE_URL")
}

model DomainListing {
  id          String   @id @default(cuid())
  domainName  String   @unique
  price       Float
  floorPrice  Float    @default(1.0)
  isBelowFloor Boolean @default(false)
  listedAt    DateTime @default(now())
  source      String   @default("vision.io")
  metadata    Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("domain_listings")
}
