{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/node",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true
  },
  "include": [
    "typescript/src/index.node.ts",
    "typescript/src/index.ts",
    "typescript/src/pglite/**/*.ts",
    "typescript/src/pg/**/*.ts",
    "typescript/src/schema/**/*.ts",
    "typescript/src/base.ts",
    "typescript/src/rls.ts",
    "typescript/src/types.ts",
    "typescript/src/utils.ts",
    "typescript/src/utils.node.ts",
    "typescript/src/migration-service.ts",
    "typescript/src/migrations.ts",
    "typescript/src/runtime-migrator/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "typescript/src/**/__tests__/**",
    "typescript/src/**/*.test.ts",
    "typescript/src/**/*.spec.ts"
  ]
}
