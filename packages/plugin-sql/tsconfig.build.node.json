{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/node",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true
  },
  "include": [
    "typescript/index.node.ts",
    "typescript/index.ts",
    "typescript/pglite/**/*.ts",
    "typescript/pg/**/*.ts",
    "typescript/schema/**/*.ts",
    "typescript/base.ts",
    "typescript/rls.ts",
    "typescript/types.ts",
    "typescript/utils.ts",
    "typescript/utils.node.ts",
    "typescript/migration-service.ts",
    "typescript/migrations.ts",
    "typescript/runtime-migrator/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "typescript/**/__tests__/**",
    "typescript/**/*.test.ts",
    "typescript/**/*.spec.ts"
  ]
}
