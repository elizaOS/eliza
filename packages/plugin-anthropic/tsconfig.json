{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@elizaos/core": ["../core/dist/index.js"],
      "@elizaos/core/*": ["../core/src/*"]
    },
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
