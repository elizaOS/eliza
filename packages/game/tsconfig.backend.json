{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist-backend",
    "rootDir": "./src-backend",
    "types": ["node"]
  },
  "include": ["src-backend/**/*"],
  "exclude": ["node_modules", "dist", "dist-backend"]
}
