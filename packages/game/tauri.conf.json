{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ElizaOS Terminal",
  "version": "0.1.0",
  "identifier": "com.elizaos.terminal",
  "build": {
    "beforeDevCommand": "npm run build:backend && npm run dev:frontend",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["../dist-backend/**/*"]
  },
  "app": {
    "windows": [
      {
        "title": "ElizaOS Terminal",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
