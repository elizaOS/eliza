{
  "name": "@elizaos/plugin-bridge",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@elizaos/core": "workspace:*",
    "@lifi/sdk": "^3.7.9",
    "@lifi/data-types": "5.15.5",
    "ethers": "^6.14.4",
    "viem": "^2.0.0",
    "zod": "3.25.67"
  },
  "devDependencies": {
    "@types/node": "^22.10.6",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.22.0",
    "prettier": "3.5.3",
    "typescript": "5.8.3"
  },
  "scripts": {
    "build": "bun run build.ts",
    "dev": "bun run build.ts --watch",
    "clean": "rm -rf dist && rm -rf .turbo",
    "lint": "eslint src --fix && prettier --write ./src",
    "typecheck": "tsc --noEmit",
    "test": "bun run build && elizaos test",
    "test:built": "elizaos test --entry dist/index.js"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "EVM_PRIVATE_KEY": {
        "type": "string",
        "description": "Hex-encoded private key (starting with 0x) used for bridge transactions.",
        "required": true,
        "sensitive": true
      },
      "EVM_CHAINS": {
        "type": "string",
        "description": "Comma-separated list of supported EVM chains (e.g., mainnet,arbitrum,polygon,base,optimism).",
        "required": false,
        "default": "mainnet,arbitrum,polygon,base,optimism",
        "sensitive": false
      },
      "EVM_PROVIDER_URL": {
        "type": "string",
        "description": "Default RPC provider URL for EVM chains.",
        "required": false,
        "default": "https://eth.llamarpc.com",
        "sensitive": false
      }
    }
  },
  "gitHead": "646c632924826e2b75c2304a75ee56959fe4a460",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elizaos-plugins/plugin-bridge.git"
  }
}