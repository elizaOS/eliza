# Simple docs server - serve pre-built docs
FROM nginx:alpine

# Assume docs are already built locally
COPY packages/docs/build /usr/share/nginx/html

# Configure nginx for single-page app
RUN echo 'server { \
    listen 3000; \
    server_name localhost; \
    root /usr/share/nginx/html; \
    index index.html; \
    location / { \
        try_files $uri $uri/ /index.html; \
    } \
}' > /etc/nginx/conf.d/default.conf

EXPOSE 3000
CMD ["nginx", "-g", "daemon off;"]