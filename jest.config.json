{
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [".ts"],
    "transform": {
        "^.+\\.tsx?$": [
            "ts-jest",
            {
                "useESM": true,
                "tsconfig": {
                    "module": "esnext",
                    "target": "esnext",
                    "moduleResolution": "bundler"
                }
            }
        ]
    },
    "moduleNameMapper": {
        "^@nexos/core$": "<rootDir>/packages/core/src/index.ts",
        "^@nexos/(.*)$": "<rootDir>/packages/$1/src/index.ts"
    }
}
