{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"include": ["**/*.{js,ts,jsx,tsx,json,md}"]
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		},
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always"
		}
	},
	"json": {
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": true
		},
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 4
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "off",
				"noPrototypeBuiltins": "warn",
				"noDuplicateObjectKeys": "warn",
				"noGlobalIsNan": "warn",
				"noSelfCompare": "warn",
				"noDoubleEquals": "warn",
				"noAssignInExpressions": "warn",
				"noConstEnum": "warn",
				"noEmptyInterface": "warn",
				"noExplicitAny": "off",
				"noImplicitAnyLet": "off"
			},
			"correctness": {
				"noUnusedVariables": "off",
				"noUnreachable": "off",
				"useExhaustiveDependencies": "off",
				"noSwitchDeclarations": "warn",
				"noUnnecessaryContinue": "warn",
				"noInnerDeclarations": "warn"
			},
			"complexity": {
				"noForEach": "off",
				"useOptionalChain": "warn",
				"useArrowFunction": "warn",
				"useFlatMap": "warn",
				"noBannedTypes": "warn",
				"noStaticOnlyClass": "off",
				"noThisInStatic": "warn",
				"noUselessConstructor": "warn",
				"noUselessSwitchCase": "warn",
				"noUselessCatch": "warn"
			},
			"style": {
				"noParameterAssign": "off",
				"noNonNullAssertion": "off"
			},
			"performance": {
				"noDelete": "off",
				"noAccumulatingSpread": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off"
			}
		},
		"ignore": [
			"**/dist/**",
			"**/node_modules/**",
			"**/coverage/**",
			"**/*.md",
			"**/*.jpg",
			"**/.docusaurus/**",
			"**/build/**",
			"**/.turbo/**",
			"**/.git/**",
			"**/local_cache/**",
			"**/cache/**",
			"**/tmp/**",
			".gitignore",
			".npmrc",
			".env"
		]
	}
}
