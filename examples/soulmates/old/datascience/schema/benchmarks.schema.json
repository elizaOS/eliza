{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "benchmarks.schema.json",
  "title": "Benchmarks",
  "type": "object",
  "required": ["domain", "description", "goodPairs", "badPairs"],
  "additionalProperties": false,
  "properties": {
    "domain": {
      "type": "string",
      "enum": ["dating", "business", "friendship"]
    },
    "description": { "type": "string" },
    "goodPairs": { "$ref": "#/$defs/pairs" },
    "badPairs": { "$ref": "#/$defs/pairs" }
  },
  "$defs": {
    "pairs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["a", "b", "expectedScoreRange", "reason"],
        "additionalProperties": false,
        "properties": {
          "a": { "type": "string", "pattern": "^(D|C|F)-(SF|NY)-\\d{3}$" },
          "b": { "type": "string", "pattern": "^(D|C|F)-(SF|NY)-\\d{3}$" },
          "expectedScoreRange": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": { "type": "integer", "minimum": -100, "maximum": 100 }
          },
          "reason": { "type": "string" }
        }
      }
    }
  }
}
