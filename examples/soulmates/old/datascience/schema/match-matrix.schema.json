{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "match-matrix.schema.json",
  "title": "MatchMatrix",
  "type": "object",
  "required": ["domain", "personaIds", "scores", "topMatches", "worstMatches"],
  "additionalProperties": false,
  "properties": {
    "domain": {
      "type": "string",
      "enum": ["dating", "business", "friendship"]
    },
    "personaIds": {
      "type": "array",
      "minItems": 2,
      "items": { "type": "string", "pattern": "^(D|C|F)-(SF|NY)-\\d{3}$" }
    },
    "scores": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": { "$ref": "#/$defs/score" }
      }
    },
    "topMatches": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["otherId", "score"],
          "additionalProperties": false,
          "properties": {
            "otherId": { "type": "string" },
            "score": { "type": "integer", "minimum": -100, "maximum": 100 }
          }
        }
      }
    },
    "worstMatches": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["otherId", "score"],
          "additionalProperties": false,
          "properties": {
            "otherId": { "type": "string" },
            "score": { "$ref": "#/$defs/score" }
          }
        }
      }
    }
  },
  "$defs": {
    "score": {
      "type": "integer",
      "minimum": -100,
      "maximum": 100
    }
  }
}
