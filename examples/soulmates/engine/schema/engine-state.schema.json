{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "engine-state.schema.json",
  "title": "EngineState",
  "type": "object",
  "required": [
    "personas",
    "matches",
    "meetings",
    "feedbackQueue",
    "safetyReports",
    "communities",
    "credits",
    "messages",
    "matchGraph"
  ],
  "additionalProperties": false,
  "properties": {
    "personas": {
      "type": "array",
      "items": { "$ref": "persona.schema.json" }
    },
    "matches": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "matchId",
          "domain",
          "personaA",
          "personaB",
          "createdAt",
          "status",
          "assessment",
          "reasoning"
        ],
        "additionalProperties": false,
        "properties": {
          "matchId": { "type": "string" },
          "domain": {
            "type": "string",
            "enum": ["general", "dating", "business", "friendship"]
          },
          "personaA": { "type": "integer", "minimum": 0, "maximum": 199 },
          "personaB": { "type": "integer", "minimum": 0, "maximum": 199 },
          "createdAt": { "type": "string" },
          "status": {
            "type": "string",
            "enum": [
              "proposed",
              "accepted",
              "scheduled",
              "completed",
              "canceled",
              "expired"
            ]
          },
          "assessment": {
            "type": "object",
            "required": [
              "score",
              "positiveReasons",
              "negativeReasons",
              "redFlags"
            ],
            "additionalProperties": false,
            "properties": {
              "score": { "type": "integer", "minimum": -100, "maximum": 100 },
              "smallPassScore": {
                "type": "integer",
                "minimum": -100,
                "maximum": 100
              },
              "largePassScore": {
                "type": "integer",
                "minimum": -100,
                "maximum": 100
              },
              "positiveReasons": {
                "type": "array",
                "items": { "type": "string" }
              },
              "negativeReasons": {
                "type": "array",
                "items": { "type": "string" }
              },
              "redFlags": { "type": "array", "items": { "type": "string" } }
            }
          },
          "reasoning": { "type": "array", "items": { "type": "string" } },
          "scheduledMeetingId": { "type": "string" }
        }
      }
    },
    "meetings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "meetingId",
          "matchId",
          "scheduledAt",
          "location",
          "status",
          "rescheduleCount"
        ],
        "additionalProperties": false,
        "properties": {
          "meetingId": { "type": "string" },
          "matchId": { "type": "string" },
          "scheduledAt": { "type": "string" },
          "location": {
            "type": "object",
            "required": ["name", "address", "city"],
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "address": { "type": "string" },
              "city": { "type": "string" },
              "placeId": { "type": "string" },
              "notes": { "type": "string" }
            }
          },
          "status": {
            "type": "string",
            "enum": ["scheduled", "completed", "no_show", "canceled"]
          },
          "rescheduleCount": { "type": "integer", "minimum": 0 },
          "cancellationReason": { "type": "string" }
        }
      }
    },
    "feedbackQueue": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "fromPersonaId",
          "toPersonaId",
          "rating",
          "sentiment",
          "issues",
          "redFlags",
          "notes",
          "createdAt",
          "processed",
          "source"
        ],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string" },
          "fromPersonaId": { "type": "integer", "minimum": 0, "maximum": 199 },
          "toPersonaId": { "type": "integer", "minimum": 0, "maximum": 199 },
          "meetingId": { "type": "string" },
          "rating": { "type": "integer", "minimum": 1, "maximum": 5 },
          "sentiment": {
            "type": "string",
            "enum": ["positive", "neutral", "negative"]
          },
          "issues": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["code", "severity", "redFlag"],
              "additionalProperties": false,
              "properties": {
                "code": { "type": "string" },
                "severity": {
                  "type": "string",
                  "enum": ["low", "medium", "high", "critical"]
                },
                "notes": { "type": "string" },
                "redFlag": { "type": "boolean" }
              }
            }
          },
          "redFlags": { "type": "array", "items": { "type": "string" } },
          "notes": { "type": "string" },
          "createdAt": { "type": "string" },
          "processed": { "type": "boolean" },
          "processedAt": { "type": "string" },
          "source": {
            "type": "string",
            "enum": ["meeting", "group_event", "conversation", "admin"]
          }
        }
      }
    },
    "safetyReports": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "reportId",
          "reporterId",
          "targetId",
          "severity",
          "notes",
          "createdAt",
          "status"
        ],
        "additionalProperties": false,
        "properties": {
          "reportId": { "type": "string" },
          "reporterId": { "type": "integer", "minimum": 0, "maximum": 199 },
          "targetId": { "type": "integer", "minimum": 0, "maximum": 199 },
          "severity": {
            "type": "string",
            "enum": ["level1", "level2", "level3"]
          },
          "notes": { "type": "string" },
          "createdAt": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["open", "reviewing", "resolved"]
          },
          "transcriptRef": { "type": "string" }
        }
      }
    },
    "communities": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["communityId", "name", "domain", "settings"],
        "additionalProperties": false,
        "properties": {
          "communityId": { "type": "string" },
          "name": { "type": "string" },
          "domain": {
            "type": "string",
            "enum": ["general", "dating", "business", "friendship"]
          },
          "settings": {
            "type": "object",
            "required": ["cadence", "quietHours", "allowDomains"],
            "additionalProperties": false,
            "properties": {
              "cadence": {
                "type": "string",
                "enum": ["weekly", "biweekly", "monthly", "flexible"]
              },
              "quietHours": { "type": "array", "items": { "type": "string" } },
              "allowDomains": {
                "type": "array",
                "items": {
                  "type": "string",
                  "enum": ["general", "dating", "business", "friendship"]
                }
              }
            }
          }
        }
      }
    },
    "credits": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "entryId",
          "personaId",
          "type",
          "amount",
          "reason",
          "createdAt"
        ],
        "additionalProperties": false,
        "properties": {
          "entryId": { "type": "string" },
          "personaId": { "type": "integer", "minimum": 0, "maximum": 199 },
          "type": { "type": "string", "enum": ["purchase", "spend", "grant"] },
          "amount": { "type": "number" },
          "reason": { "type": "string" },
          "createdAt": { "type": "string" }
        }
      }
    },
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "messageId",
          "personaId",
          "direction",
          "channel",
          "text",
          "createdAt",
          "status"
        ],
        "additionalProperties": false,
        "properties": {
          "messageId": { "type": "string" },
          "personaId": { "type": "integer", "minimum": 0, "maximum": 199 },
          "direction": { "type": "string", "enum": ["inbound", "outbound"] },
          "channel": { "type": "string", "enum": ["whatsapp", "sms", "email"] },
          "text": { "type": "string" },
          "createdAt": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["sent", "delivered", "failed"]
          }
        }
      }
    },
    "matchGraph": {
      "type": "object",
      "required": ["edges"],
      "additionalProperties": false,
      "properties": {
        "edges": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["from", "to", "weight", "type", "createdAt"],
            "additionalProperties": false,
            "properties": {
              "from": { "type": "integer", "minimum": 0, "maximum": 199 },
              "to": { "type": "integer", "minimum": 0, "maximum": 199 },
              "weight": { "type": "number", "minimum": 0, "maximum": 1 },
              "type": {
                "type": "string",
                "enum": [
                  "match",
                  "feedback_positive",
                  "feedback_negative",
                  "met"
                ]
              },
              "createdAt": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
