{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/node_modules",
      "!**/out",
      "!**/build",
      "!**/.vercel",
      "!**/public/_pagefind",
      "!**/*.sol",
      "!**/python",
      "!**/venv",
      "!**/*.md",
      "!**/*.mdx",
      "!**/polyagent-platform-artchitecture",
      "!**/genesis.json",
      "!**/drizzle/migrations",
      "!packages/training/book/mermaid-init.js",
      "!packages/training/book/mermaid.min.js"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "useExhaustiveDependencies": "info"
      },
      "style": {
        "useConst": "error"
      },
      "suspicious": {
        "noExplicitAny": "error"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "info",
          "fix": "safe",
          "options": {
            "functions": ["clsx", "cva", "cn"]
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "css": {
    "parser": {
      "cssModules": true,
      "allowWrongLineComments": true,
      "tailwindDirectives": true
    },
    "formatter": {
      "enabled": false
    },
    "linter": {
      "enabled": false
    }
  },
  "overrides": [
    {
      "includes": ["**/logger.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": [
        "apps/web/src/lib/agents/plugins/**",
        "apps/web/src/lib/training/**",
        "apps/web/src/lib/benchmark/**",
        "apps/web/src/lib/agents/examples/**",
        "apps/web/src/lib/agents/autonomous/a2a-only/**",
        "apps/web/src/a2a/**"
      ],
      "linter": {
        "enabled": false
      }
    },
    {
      "includes": ["docs/scripts/**", "docs/app/**/*.jsx"],
      "linter": {
        "rules": {
          "suspicious": {
            "noImplicitAnyLet": "off",
            "noAssignInExpressions": "off",
            "noShadowRestrictedNames": "off"
          },
          "correctness": {
            "useHookAtTopLevel": "off"
          }
        }
      }
    }
  ]
}
