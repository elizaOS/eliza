{
  "name": "@polyagent/app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/examples/*"
  ],
  "scripts": {
    "postinstall": "bun run scripts/postinstall-solidity-deps.ts && bun run scripts/postinstall-install-python-deps.ts",
    "dev": "bun run scripts/pre-dev/pre-dev-local.ts && bun run scripts/dev-wrapper.ts",
    "dev:web": "turbo dev --filter=web",
    "dev:web:staging": "NODE_ENV=development bun --env-file=.env.staging.local run dev:web",
    "dev:web:production": "NODE_ENV=development bun --env-file=.env.production.local run dev:web",
    "vercel:dev:web:staging": "bun run env:pull:staging && bun run dev:web:staging",
    "vercel:dev:web:production": "bun run env:pull:production && bun run dev:web:production",
    "dev:next-only": "turbo dev:next-only --filter=web",
    "env:pull:staging": "vercel env pull --yes .env.staging.local --environment=staging",
    "env:pull:production": "vercel env pull --yes .env.production.local --environment=production",
    "build": "echo 'Skipping polyagent build - run separately with bunx turbo build'",
    "clean": "turbo clean && rm -rf node_modules/.cache .turbo",
    "build:staging": "NODE_ENV=production bun --env-file=.env.staging.local run build",
    "build:production": "NODE_ENV=production bun --env-file=.env.production.local run build",
    "start": "turbo start --filter=web",
    "start:local": "NODE_ENV=production bun --env-file=.env run start",
    "start:staging": "NODE_ENV=production bun --env-file=.env.staging.local run start",
    "start:production": "NODE_ENV=production bun --env-file=.env.production.local run start",
    "check": "biome check --write .",
    "lint": "echo 'Lint skipped for polyagent - run manually with: bunx biome check --write --unsafe .' && exit 0",
    "typecheck": "echo 'Skipping polyagent typecheck - run separately with internal turbo'",
    "validate:all": "bun run typecheck && bun run lint",
    "test": "bun run test:unit && bun run test:integration",
    "test:unit": "bun test packages/testing/unit/ --preload ./packages/testing/unit/preload.ts",
    "test:integration": "bun test packages/testing/integration/ --preload ./packages/testing/integration/preload.ts",
    "test:ci": "bash scripts/ci/run-all-tests.sh",
    "test:e2e": "cd packages/testing && playwright test e2e",
    "test:testnet": "bun test packages/testing/deployment/testnet.test.ts packages/testing/integration/agent0-testnet.test.ts",
    "test:localnet": "bun test packages/testing/integration/agent0-localnet.test.ts packages/testing/deployment/localnet.test.ts",
    "miniapp:deploy": "bash scripts/deploy-miniapp.sh",
    "db:generate": "bun run --cwd packages/db db:generate",
    "db:migrate": "bun run --cwd packages/db db:migrate",
    "db:push": "bun run --cwd packages/db db:push",
    "db:pull": "bun run --cwd packages/db db:pull",
    "db:studio": "bun run --cwd packages/db db:studio",
    "db:check": "bun run --cwd packages/db db:check",
    "db:seed": "bun run scripts/seed-database.ts",
    "db:seed:test": "bun run scripts/seed-test-data.ts all",
    "deploy:local": "bun run apps/cli/src/index.ts deploy local",
    "deploy:testnet": "bun run apps/cli/src/index.ts deploy testnet",
    "deploy:mainnet": "bun run apps/cli/src/index.ts deploy mainnet --force",
    "hardhat": "cd packages/contracts && npx hardhat node",
    "contracts:setup": "rm -rf packages/contracts/dependencies && bun run scripts/postinstall-solidity-deps.ts",
    "contracts:test": "cd packages/contracts && forge test",
    "contracts:test:oracle": "cd packages/contracts && forge test --match-contract BabylonGameOracleTest",
    "contracts:deploy:local": "bun run apps/cli/src/index.ts deploy local",
    "oracle:test:e2e": "bun test packages/testing/integration/oracle-full-flow.test.ts",
    "oracle:test:betting": "bun test packages/testing/integration/betting/ packages/testing/e2e/betting-on-chain.test.ts",
    "oracle:test:integration": "bun test packages/testing/integration/oracle/",
    "agent0:setup": "bun run apps/cli/src/index.ts agent agent0-config",
    "babylon": "bun run apps/cli/src/index.ts",
    "testnet:setup": "bun run apps/cli/src/index.ts deploy setup",
    "hf:collect": "bun run apps/cli/src/index.ts model collect-data",
    "hf:upload": "bun run apps/cli/src/index.ts model upload-dataset",
    "stress-test": "bun run apps/cli/src/index.ts test load",
    "stress-test:a2a": "bun run apps/cli/src/index.ts test a2a",
    "prepare": "husky",
    "docs:generate": "bun scripts/docs/generate_all_docs.ts",
    "ruler:init": "ruler init",
    "ruler:apply": "ruler apply",
    "ruler:apply:dry": "ruler apply --dry-run --verbose",
    "ruler:revert": "ruler revert"
  },
  "dependencies": {
    "@aws-sdk/lib-storage": "^3.970.0",
    "@neondatabase/serverless": "^1.0.2",
    "@privy-io/react-auth": "3.8.1",
    "@privy-io/server-auth": "^1.32.5",
    "@sentry/nextjs": "^10.34.0",
    "@solana-program/system": "0.5.4",
    "@solana-program/token": "0.3.3",
    "@solana/kit": "5.0.0",
    "@solana/web3.js": "1.95.3",
    "@tailwindcss/postcss": "^4.1.18",
    "@vercel/analytics": "^1.6.1",
    "@vercel/blob": "^2.0.0",
    "@vercel/speed-insights": "^1.3.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.7",
    "ethers": "^6.16.0",
    "framer-motion": "^12.26.2",
    "import-in-the-middle": "^2.0.0",
    "ioredis": "^5.8.2",
    "js-tiktoken": "^1.0.21",
    "lightweight-charts": "^5.0.9",
    "next-themes": "^0.4.6",
    "openai": "^6.8.1",
    "permissionless": "^0.3.2",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "posthog-js": "^1.324.1",
    "posthog-node": "^5.21.0",
    "require-in-the-middle": "^8.0.1",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "viem": "^2.41.2",
    "ws": "^8.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@intellectronica/ruler": "^0.3.21",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@playwright/test": "^1.56.1",
    "@prb/math": "^4.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.0",
    "bun-types": "^1.3.2",
    "concurrently": "^9.2.1",
    "csv-parse": "^6.1.0",
    "hardhat": "2.22.18",
    "husky": "^9.1.7",
    "knip": "^5.80.2",
    "lint-staged": "^16.2.6",
    "madge": "^8.0.0",
    "tsx": "^4.21.0",
    "turbo": "^2.5.4",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,jsx,tsx,json,jsonc}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "packageManager": "bun@1.3.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "trustedDependencies": [
    "@reown/appkit",
    "@sentry/cli",
    "@tree-sitter-grammars/tree-sitter-yaml",
    "core-js",
    "core-js-pure",
    "protobufjs"
  ]
}
