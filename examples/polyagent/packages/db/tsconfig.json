{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@polyagent/shared": ["../shared/src/index.ts"],
      "@polyagent/shared/*": ["../shared/src/*"],
      "@polyagent/contracts": ["../contracts/src/index.ts"],
      "@polyagent/contracts/*": ["../contracts/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/__tests__/**/*"],
  "references": [{ "path": "../shared" }, { "path": "../contracts" }]
}
