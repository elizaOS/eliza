{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@polyagent/contracts": ["./src/index.ts"],
      "@polyagent/contracts/*": ["./*"]
    }
  },
  "include": ["src/**/*", "deployments/**/*.ts", "deployments/**/*.json"],
  "exclude": ["node_modules", "dist", "out", "cache"]
}
