{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "types": ["bun-types"],
    "baseUrl": ".",
    "paths": {
      "@babylon/shared": ["../shared/src/index.ts"],
      "@babylon/shared/*": ["../shared/src/*"],
      "@babylon/db": ["../db/src/index.ts"],
      "@babylon/db/*": ["../db/src/*"],
      "@babylon/api": ["../api/src/index.ts"],
      "@babylon/api/*": ["../api/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "references": [
    { "path": "../shared" },
    { "path": "../db" },
    { "path": "../api" }
  ]
}
