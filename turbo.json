{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "check-types": {
            "dependsOn": ["build"]
        },
        "@nexos/agent#check-types": {
            "dependsOn": [
                "@nexos/plugin-solana#build",
                "@nexos/plugin-direct#build"
            ]
        },
        "build": {
            "outputs": ["dist/**"],
            "dependsOn": ["^@nexos/core#build"]
        },
        "@nexos/client-direct#build": {
            "outputs": ["dist/**"],
            "dependsOn": []
        },
        "nex-docs#build": {
            "outputs": ["build/**"]
        },
        "dev": {
            "persistent": true,
            "cache": true
        }
    }
}
