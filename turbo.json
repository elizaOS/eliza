{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["LOG_LEVEL"],
      "outputs": ["dist/**", "build/**"],
      "cache": false
    },
    "start": {
      "dependsOn": ["@elizaos/core#build"],
      "env": ["LOG_LEVEL"],
      "persistent": true,
      "cache": false
    },
    "dev": {
      "dependsOn": ["@elizaos/core#build"],
      "persistent": true,
      "cache": false
    },
    "test": {
      "dependsOn": ["@elizaos/core#build"],
      "persistent": true,
      "cache": false
    },
    "lint:fix": {
      "dependsOn": ["@elizaos/core#build"],
      "cache": false
    },
    "swarm": {
      "dependsOn": ["@elizaos/core#build"]
    },
    "migrate": {
      "dependsOn": ["@elizaos/core#build"]
    },
    "migrate:generate": {
      "dependsOn": ["@elizaos/core#build"]
    }
  }
}
