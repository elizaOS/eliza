{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [
    ".env",
    ".env.*",
    "tsconfig.json",
    "package-lock.json",
    "bun.lockb",
    "pnpm-lock.yaml",
    "yarn.lock"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["LOG_LEVEL", "NODE_ENV", "CI", "ELIZA_*"],
      "outputs": ["dist/**"],
      "inputs": [
        "src/**",
        "tsconfig*.json",
        "package.json",
        "tsup.config.ts",
        "*.config.js",
        "*.config.ts"
      ]
    },
    "lint": {
      "outputs": [".eslintcache"]
    },
    "format": {
      "outputs": []
    },
    "format:check": {
      "outputs": []
    },
    "start": {
      "dependsOn": ["@elizaos/core#build"],
      "env": ["LOG_LEVEL"],
      "persistent": true
    },
    "dev": {
      "dependsOn": ["@elizaos/core#build"],
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.ts", "src/**/*.js", "__tests__/**/*", "*.test.*"],
      "cache": false,
      "persistent": false
    },
    "migrate": {
      "dependsOn": ["@elizaos/core#build"],
      "cache": false
    },
    "migrate:generate": {
      "dependsOn": ["@elizaos/core#build"],
      "cache": false
    },
    "clean": {
      "cache": false
    }
  }
}
