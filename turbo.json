{
    "$schema": "https://turborepo.org/schema.json",
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**"]
      },
      "start": {
        "dependsOn": ["build"],
        "persistent": true
      },
      "dev": {
        "persistent": false,
        "dependsOn": ["build"],
        "cache": false
      },
      "test": {
        "persistent": true,
        "dependsOn": ["build"]
      },
      "lint:fix": {
        "dependsOn": ["build"]
      }
    }
}