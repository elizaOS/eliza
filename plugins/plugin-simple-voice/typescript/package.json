{
  "name": "@elizaos/plugin-simple-voice",
  "version": "0.1.0",
  "description": "Retro 1980s SAM Text-to-Speech plugin for ElizaOS agents",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsc --watch",
    "test": "vitest run",
    "lint": "bunx @biomejs/biome check --write --unsafe .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lint:check": "bunx @biomejs/biome check .",
    "build": "bun run build.ts",
    "build:ts": "bun run build.ts"
  },
  "keywords": [
    "elizaos",
    "plugin",
    "tts",
    "text-to-speech",
    "sam",
    "retro",
    "voice-synthesis",
    "1980s"
  ],
  "author": "ElizaOS Team",
  "license": "MIT",
  "dependencies": {
    "@elizaos/core": "workspace:*",
    "sam-js": "^0.3.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "bun": "^1.0.0",
    "typescript": "^5.9.3",
    "@biomejs/biome": "^2.3.11"
  },
  "peerDependencies": {
    "@elizaos/core": "workspace:*"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ai16z/eliza.git",
    "directory": "plugins/plugin-simple-voice/typescript"
  },
  "publishConfig": {
    "access": "public"
  }
}
