{
  "name": "@elizaos/plugin-github",
  "version": "2.0.0-alpha.2",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elizaos-plugins/plugin-github.git"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@elizaos/core": "workspace:*",
    "@octokit/rest": "^21.0.0",
    "@octokit/types": "^13.0.0",
    "@octokit/webhooks-types": "^7.5.0",
    "glob": "^11.0.0",
    "simple-git": "^3.27.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "dev": "bun --hot build.ts",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "vitest run __tests__/",
    "test:unit": "vitest run __tests__/",
    "test:integration": "echo 'Integration tests require elizaos CLI - skipping'",
    "lint": "biome check --write .",
    "lint:check": "biome check .",
    "clean": "rm -rf dist .turbo node_modules .turbo-tsconfig.json tsconfig.tsbuildinfo",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "build": "bun run build.ts",
    "build:ts": "bun run build.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "GITHUB_API_TOKEN": {
        "type": "string",
        "description": "GitHub personal access token for API authentication",
        "required": true,
        "sensitive": true
      },
      "GITHUB_OWNER": {
        "type": "string",
        "description": "Default GitHub repository owner (username or organization)",
        "required": false,
        "sensitive": false
      },
      "GITHUB_REPO": {
        "type": "string",
        "description": "Default GitHub repository name",
        "required": false,
        "sensitive": false
      },
      "GITHUB_BRANCH": {
        "type": "string",
        "description": "Default branch name (defaults to main)",
        "required": false,
        "default": "main",
        "sensitive": false
      },
      "GITHUB_WEBHOOK_SECRET": {
        "type": "string",
        "description": "Secret for validating GitHub webhook payloads",
        "required": false,
        "sensitive": true
      },
      "GITHUB_APP_ID": {
        "type": "string",
        "description": "GitHub App ID for app-based authentication",
        "required": false,
        "sensitive": false
      },
      "GITHUB_APP_PRIVATE_KEY": {
        "type": "string",
        "description": "GitHub App private key for app-based authentication",
        "required": false,
        "sensitive": true
      },
      "GITHUB_INSTALLATION_ID": {
        "type": "string",
        "description": "GitHub App installation ID",
        "required": false,
        "sensitive": false
      }
    }
  },
  "gitHead": "646c632924826e2b75c2304a75ee56959fe4a460"
}
