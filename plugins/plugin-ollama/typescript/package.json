{
  "name": "@elizaos/plugin-ollama",
  "version": "1.2.4",
  "type": "module",
  "main": "dist/node/index.node.js",
  "module": "dist/node/index.node.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elizaos-plugins/plugin-ollama.git"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "browser": {
        "types": "./dist/browser/index.d.ts",
        "import": "./dist/browser/index.browser.js",
        "default": "./dist/browser/index.browser.js"
      },
      "node": {
        "types": "./dist/node/index.d.ts",
        "import": "./dist/node/index.node.js",
        "default": "./dist/node/index.node.js"
      },
      "bun": {
        "types": "./dist/node/index.d.ts",
        "default": "./dist/node/index.node.js"
      },
      "require": "./dist/cjs/index.node.cjs",
      "default": "./dist/node/index.node.js"
    },
    "./node": {
      "types": "./dist/node/index.d.ts",
      "import": "./dist/node/index.node.js",
      "default": "./dist/node/index.node.js"
    },
    "./browser": {
      "types": "./dist/browser/index.d.ts",
      "import": "./dist/browser/index.browser.js",
      "default": "./dist/browser/index.browser.js"
    },
    "./rust": {
      "browser": {
        "import": "../rust/pkg/web/elizaos_plugin_ollama.js",
        "default": "../rust/pkg/web/elizaos_plugin_ollama.js"
      },
      "node": {
        "import": "../rust/pkg/node/elizaos_plugin_ollama.js",
        "default": "../rust/pkg/node/elizaos_plugin_ollama.js"
      },
      "default": "../rust/pkg/node/elizaos_plugin_ollama.js"
    }
  },
  "files": [
    "dist",
    "../rust/pkg"
  ],
  "sideEffects": false,
  "dependencies": {
    "@ai-sdk/ui-utils": "^1.2.8",
    "@elizaos/core": "^1.0.0",
    "ai": "^4.3.9",
    "js-tiktoken": "^1.0.18",
    "ollama-ai-provider": "^1.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.4",
    "prettier": "3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "bun run build.ts && tsc -p tsconfig.build.json",
    "dev": "bun run build.ts --watch",
    "lint": "prettier --write .",
    "clean": "rm -rf dist .turbo node_modules .turbo-tsconfig.json tsconfig.tsbuildinfo",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "bun test",
    "test:unit": "bun test __tests__/",
    "build:rust": "cd ../rust && cargo build --release",
    "build:rust:wasm": "cd ../rust && wasm-pack build --target web --out-dir pkg/web && wasm-pack build --target nodejs --out-dir pkg/node",
    "test:rust": "cd ../rust && cargo test",
    "lint:rust": "cd ../rust && cargo clippy --all-targets -- -D warnings",
    "lint:python": "cd ../python && ruff check . && ruff format --check .",
    "lint:python:fix": "cd ../python && ruff check --fix . && ruff format .",
    "test:python": "cd ../python && pytest",
    "typecheck:python": "cd ../python && python3 -m mypy elizaos_plugin_ollama",
    "postinstall": "bun scripts/install-ollama.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "OLLAMA_API_ENDPOINT": {
        "type": "string",
        "description": "Base URL for the Ollama API. The plugin will strip this to the domain part and append the necessary API paths.",
        "required": true,
        "default": "http://localhost:11434/api",
        "sensitive": false
      },
      "OLLAMA_SMALL_MODEL": {
        "type": "string",
        "description": "Name or tag of the small-sized Ollama model to use for text and object generation.",
        "required": false,
        "default": "gemma3:latest",
        "sensitive": false
      },
      "OLLAMA_MEDIUM_MODEL": {
        "type": "string",
        "description": "Name or tag of the medium-sized Ollama model (defined in config but not currently used).",
        "required": false,
        "sensitive": false
      },
      "OLLAMA_LARGE_MODEL": {
        "type": "string",
        "description": "Name or tag of the large-sized Ollama model to use for text and object generation.",
        "required": false,
        "default": "gemma3:latest",
        "sensitive": false
      },
      "OLLAMA_EMBEDDING_MODEL": {
        "type": "string",
        "description": "Name or tag of the Ollama model used to generate text embeddings.",
        "required": false,
        "default": "nomic-embed-text:latest",
        "sensitive": false
      },
      "SMALL_MODEL": {
        "type": "string",
        "description": "Fallback environment variable for specifying a small model if OLLAMA_SMALL_MODEL is not set.",
        "required": false,
        "default": "gemma3:latest",
        "sensitive": false
      },
      "LARGE_MODEL": {
        "type": "string",
        "description": "Fallback environment variable for specifying a large model if OLLAMA_LARGE_MODEL is not set.",
        "required": false,
        "default": "gemma3:latest",
        "sensitive": false
      }
    }
  },
  "gitHead": "646c632924826e2b75c2304a75ee56959fe4a460"
}
