{
  "name": "@elizaos/plugin-xai",
  "version": "2.0.0-alpha.2",
  "description": "",
  "type": "module",
  "main": "dist/node/index.node.js",
  "module": "dist/node/index.node.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elizaos-plugins/plugin-xai.git"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "browser": {
        "types": "./dist/browser/index.d.ts",
        "import": "./dist/browser/index.browser.js",
        "default": "./dist/browser/index.browser.js"
      },
      "node": {
        "types": "./dist/node/index.d.ts",
        "import": "./dist/node/index.node.js",
        "require": "./dist/cjs/index.node.cjs",
        "default": "./dist/node/index.node.js"
      },
      "bun": {
        "types": "./dist/node/index.d.ts",
        "default": "./dist/node/index.node.js"
      },
      "require": "./dist/cjs/index.node.cjs",
      "default": "./dist/node/index.node.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [],
  "author": "elizaOS",
  "license": "MIT",
  "scripts": {
    "build": "bun run build.ts",
    "build:ts": "bun run build.ts",
    "dev": "bun --hot build.ts",
    "clean": "rm -rf dist .turbo node_modules",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "bunx @biomejs/biome check --write --unsafe .",
    "lint:check": "bunx @biomejs/biome check .",
    "format": "bunx @biomejs/biome format --write .",
    "format:check": "bunx @biomejs/biome format ."
  },
  "dependencies": {
    "@elizaos/core": "workspace:*",
    "twitter-api-v2": "^1.28.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@elizaos/core": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "XAI_API_KEY": {
        "type": "string",
        "description": "xAI API key for Grok model access and X (formerly Twitter) integration.",
        "required": true,
        "sensitive": true
      },
      "XAI_MODEL": {
        "type": "string",
        "description": "xAI Grok model for text generation (grok-3, grok-3-mini).",
        "required": false,
        "default": "grok-3",
        "sensitive": false
      },
      "XAI_SMALL_MODEL": {
        "type": "string",
        "description": "xAI Grok model for faster/smaller tasks.",
        "required": false,
        "default": "grok-3-mini",
        "sensitive": false
      },
      "XAI_EMBEDDING_MODEL": {
        "type": "string",
        "description": "xAI model for text embeddings.",
        "required": false,
        "default": "grok-embedding",
        "sensitive": false
      },
      "XAI_BASE_URL": {
        "type": "string",
        "description": "xAI API base URL.",
        "required": false,
        "default": "https://api.x.ai/v1",
        "sensitive": false
      },
      "X_AUTH_MODE": {
        "type": "string",
        "description": "X (formerly Twitter) auth mode: 'env' (API keys), 'oauth' (OAuth2 PKCE), or 'bearer'.",
        "required": false,
        "default": "env",
        "sensitive": false
      },
      "X_API_KEY": {
        "type": "string",
        "description": "X (formerly Twitter) API key for OAuth 1.0a.",
        "required": false,
        "sensitive": true
      },
      "X_API_SECRET": {
        "type": "string",
        "description": "X (formerly Twitter) API secret key for OAuth 1.0a.",
        "required": false,
        "sensitive": true
      },
      "X_ACCESS_TOKEN": {
        "type": "string",
        "description": "X (formerly Twitter) access token for OAuth 1.0a.",
        "required": false,
        "sensitive": true
      },
      "X_ACCESS_TOKEN_SECRET": {
        "type": "string",
        "description": "X (formerly Twitter) access token secret for OAuth 1.0a.",
        "required": false,
        "sensitive": true
      },
      "X_BEARER_TOKEN": {
        "type": "string",
        "description": "X (formerly Twitter) Bearer token for app-only authentication.",
        "required": false,
        "sensitive": true
      },
      "X_CLIENT_ID": {
        "type": "string",
        "description": "X (formerly Twitter) OAuth2 client ID.",
        "required": false,
        "sensitive": false
      },
      "X_REDIRECT_URI": {
        "type": "string",
        "description": "OAuth2 redirect URI.",
        "required": false,
        "sensitive": false
      },
      "X_DRY_RUN": {
        "type": "boolean",
        "description": "When true, all X actions are simulated.",
        "required": false,
        "default": false,
        "sensitive": false
      },
      "X_ENABLE_POST": {
        "type": "boolean",
        "description": "Enable autonomous posting.",
        "required": false,
        "default": false,
        "sensitive": false
      },
      "X_ENABLE_REPLIES": {
        "type": "boolean",
        "description": "Enable reply handling.",
        "required": false,
        "default": true,
        "sensitive": false
      },
      "X_ENABLE_ACTIONS": {
        "type": "boolean",
        "description": "Enable timeline actions (like, repost).",
        "required": false,
        "default": false,
        "sensitive": false
      },
      "X_MAX_POST_LENGTH": {
        "type": "number",
        "description": "Maximum post length (up to 4000 for premium).",
        "required": false,
        "default": 280,
        "sensitive": false
      }
    }
  }
}
