{
  "name": "@elizaos/plugin-forms-root",
  "description": "Forms plugin for ElizaOS - structured conversational data collection",
  "version": "1.2.0",
  "type": "module",
  "main": "typescript/dist/node/index.node.js",
  "module": "typescript/dist/node/index.node.js",
  "types": "typescript/dist/index.d.ts",
  "packageType": "plugin",
  "platform": "node",
  "license": "MIT",
  "author": "elizaOS",
  "keywords": [
    "plugin",
    "elizaos",
    "forms",
    "data-collection",
    "conversational-forms",
    "multi-step-forms"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/elizaos/elizaos"
  },
  "homepage": "https://elizaos.ai",
  "bugs": {
    "url": "https://github.com/elizaos/elizaos/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./typescript/dist/index.d.ts",
      "node": {
        "types": "./typescript/dist/node/index.d.ts",
        "import": "./typescript/dist/node/index.node.js",
        "default": "./typescript/dist/node/index.node.js"
      },
      "bun": {
        "types": "./typescript/dist/node/index.d.ts",
        "default": "./typescript/dist/node/index.node.js"
      },
      "default": "./typescript/dist/node/index.node.js"
    },
    "./rust": {
      "node": {
        "import": "./rust/pkg/node/elizaos_plugin_forms.js",
        "default": "./rust/pkg/node/elizaos_plugin_forms.js"
      },
      "default": "./rust/pkg/node/elizaos_plugin_forms.js"
    }
  },
  "files": [
    "typescript/dist",
    "rust/pkg",
    "README.md"
  ],
  "sideEffects": false,
  "dependencies": {
    "@elizaos/core": "workspace:*",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "@types/uuid": "^11.0.0",
    "dotenv": "^17.2.3",
    "typescript": "^5.9.3",
    "@biomejs/biome": "^2.3.11"
  },
  "scripts": {
    "build:prompts": "node ../../packages/prompts/scripts/generate-plugin-prompts.js ./typescript/prompts ./typescript/generated/prompts --target all",
    "build": "npm run build:prompts && bun run build:ts && bun run build:rust && bun run build:python",
    "build:ts": "cd typescript && bun run build.ts",
    "build:python": "test -d python && cd python && (python3 -m build 2>/dev/null || pyproject-build) || echo 'Python build skipped - no python directory'",
    "dev": "cd typescript && bun run build.ts --watch",
    "clean": "rm -rf typescript/dist .turbo typescript/node_modules .turbo-tsconfig.json typescript/tsconfig.tsbuildinfo",
    "format": "bunx @biomejs/biome format --write ./typescript",
    "format:check": "bunx @biomejs/biome format ./typescript",
    "typecheck": "cd typescript && tsc --noEmit -p tsconfig.json",
    "test": "bun run test:unit && bun run test:integration",
    "test:unit": "vitest run typescript/__tests__/",
    "test:integration": "vitest run typescript/__tests__/integration/",
    "test:watch": "vitest",
    "build:rust": "test -d rust && cd rust && cargo build --release || echo 'Rust build skipped - no rust directory'",
    "build:rust:wasm": "cd rust && wasm-pack build --target nodejs --out-dir pkg/node",
    "test:rust": "cd rust && cargo test",
    "lint:rust": "cd rust && cargo clippy --all-targets -- -D warnings",
    "lint:python": "cd python && ruff check . && ruff format --check .",
    "lint:python:fix": "cd python && ruff check --fix . && ruff format .",
    "test:python": "cd python && pytest",
    "typecheck:python": "cd python && python3 -m mypy elizaos_plugin_forms",
    "lint": "bunx @biomejs/biome check --write ./typescript",
    "lint:check": "bunx @biomejs/biome check ./typescript"
  },
  "publishConfig": {
    "access": "public"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {},
    "description": "Forms management plugin for structured conversational data collection"
  }
}
