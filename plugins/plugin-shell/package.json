{
  "name": "@elizaos/plugin-shell",
  "version": "1.2.0",
  "description": "Shell command execution plugin for ElizaOS with directory restrictions and history tracking",
  "type": "module",
  "main": "typescript/dist/index.js",
  "module": "typescript/dist/index.js",
  "types": "typescript/dist/index.d.ts",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/elizaos/eliza.git"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./typescript/dist/index.d.ts",
      "import": "./typescript/dist/index.js",
      "default": "./typescript/dist/index.js"
    }
  },
  "files": [
    "typescript/dist",
    "python",
    "rust"
  ],
  "keywords": ["eliza", "plugin", "shell", "terminal", "command", "history"],
  "author": "elizaOS",
  "license": "MIT",
  "dependencies": {
    "@elizaos/core": "^1.2.0",
    "cross-spawn": "^7.0.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cross-spawn": "^6.0.6",
    "@types/node": "^20.11.16",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1"
  },
  "scripts": {
    "build": "cd typescript && bun run build.ts",
    "build:ts": "cd typescript && bun run build.ts",
    "build:rust": "cd rust && cargo build --release",
    "build:python": "cd python && python -m build",
    "dev": "cd typescript && bun --hot build.ts",
    "clean": "rm -rf typescript/dist python/dist rust/target .turbo node_modules",
    "test": "bun test",
    "test:ts": "cd typescript && bun test",
    "test:rust": "cd rust && cargo test",
    "test:python": "cd python && pytest",
    "typecheck": "cd typescript && tsc --noEmit"
  },
  "publishConfig": {
    "access": "public"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "SHELL_ENABLED": {
        "type": "boolean",
        "description": "Enable or disable the shell plugin (disabled by default for safety)",
        "required": false,
        "default": false,
        "sensitive": false
      },
      "SHELL_ALLOWED_DIRECTORY": {
        "type": "string",
        "description": "The directory that shell commands are restricted to. Commands cannot execute outside this directory.",
        "required": true,
        "sensitive": false
      },
      "SHELL_TIMEOUT": {
        "type": "number",
        "description": "Maximum command execution timeout in milliseconds",
        "required": false,
        "default": 30000,
        "sensitive": false
      },
      "SHELL_FORBIDDEN_COMMANDS": {
        "type": "string",
        "description": "Comma-separated list of additional forbidden commands",
        "required": false,
        "sensitive": false
      }
    }
  }
}
