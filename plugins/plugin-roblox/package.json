{
  "name": "@elizaos/plugin-roblox",
  "version": "2.0.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elizaos-plugins/plugin-roblox.git"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./rust": {
      "node": {
        "import": "./rust/pkg/node/elizaos_plugin_roblox.js",
        "default": "./rust/pkg/node/elizaos_plugin_roblox.js"
      },
      "default": "./rust/pkg/node/elizaos_plugin_roblox.js"
    }
  },
  "files": [
    "dist",
    "rust/pkg"
  ],
  "dependencies": {
    "@elizaos/core": "^1.7.0",
    "typescript": "^5.8.3",
    "zod": "^3.25.9"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.0.0"
  },
  "scripts": {
    "build": "cd typescript && bun run build.ts && tsc -p tsconfig.build.json",
    "dev": "cd typescript && bun run build.ts --watch",
    "typecheck": "cd typescript && tsc --noEmit -p tsconfig.json",
    "test": "bun run test:unit && bun run test:integration",
    "test:unit": "bun test typescript/__tests__/",
    "test:integration": "elizaos test",
    "lint": "biome check --write typescript/",
    "lint:check": "biome check typescript/",
    "clean": "rm -rf dist .turbo node_modules .turbo-tsconfig.json tsconfig.tsbuildinfo",
    "format": "biome format --write typescript/",
    "format:check": "biome format typescript/",
    "build:rust": "cd rust && ./build.sh",
    "build:rust:native": "cd rust && cargo build --release",
    "test:rust": "cd rust && cargo test",
    "lint:rust": "cd rust && cargo clippy --all-targets -- -D warnings",
    "typecheck:rust": "cd rust && cargo check --all-targets --all-features",
    "lint:python": "cd python && ruff check . && ruff format --check .",
    "lint:python:fix": "cd python && ruff check --fix . && ruff format .",
    "typecheck:python": "cd python && python3 -m mypy elizaos_plugin_roblox || echo 'mypy not installed, skipping typecheck'"
  },
  "publishConfig": {
    "access": "public"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "ROBLOX_API_KEY": {
        "type": "string",
        "description": "API key for authenticating with the Roblox Open Cloud API.",
        "required": true,
        "sensitive": true
      },
      "ROBLOX_UNIVERSE_ID": {
        "type": "string",
        "description": "The Universe ID of the Roblox experience to interact with.",
        "required": true,
        "sensitive": false
      },
      "ROBLOX_PLACE_ID": {
        "type": "string",
        "description": "The Place ID of the specific Roblox place within the universe.",
        "required": false,
        "sensitive": false
      },
      "ROBLOX_WEBHOOK_SECRET": {
        "type": "string",
        "description": "Secret key for validating incoming webhooks from Roblox.",
        "required": false,
        "sensitive": true
      },
      "ROBLOX_MESSAGING_TOPIC": {
        "type": "string",
        "description": "The messaging service topic for cross-server communication.",
        "required": false,
        "default": "eliza-agent",
        "sensitive": false
      },
      "ROBLOX_POLL_INTERVAL": {
        "type": "number",
        "description": "Polling interval in seconds for Roblox data store operations.",
        "required": false,
        "default": 30,
        "sensitive": false
      },
      "ROBLOX_DRY_RUN": {
        "type": "boolean",
        "description": "When true, operations are simulated but not executed.",
        "required": false,
        "default": false,
        "sensitive": false
      }
    }
  }
}
