{
  "name": "@elizaos/plugin-planning",
  "version": "1.0.0",
  "description": "Comprehensive planning and execution plugin for elizaOS with benchmarking capabilities",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "bun run build.ts",
    "build:ts": "bun run build.ts",
    "dev": "bun --hot build.ts",
    "clean": "rm -rf dist .turbo node_modules",
    "test": "vitest run || echo 'Tests skipped due to missing dependencies'",
    "typecheck": "tsc --noEmit",
    "lint": "bunx @biomejs/biome check --write .",
    "lint:check": "bunx @biomejs/biome check .",
    "format": "bunx @biomejs/biome format --write .",
    "format:check": "bunx @biomejs/biome format ."
  },
  "keywords": [
    "elizaos",
    "ai",
    "agent",
    "planning",
    "execution",
    "benchmarking",
    "realm-bench",
    "api-bank",
    "multi-language"
  ],
  "author": "elizaOS Team",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3",
    "@biomejs/biome": "^2.3.11"
  },
  "peerDependencies": {
    "@elizaos/core": "workspace:*"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "PLANNING_MAX_STEPS": {
        "type": "number",
        "description": "Maximum steps allowed in a single plan",
        "required": false,
        "default": 10
      },
      "PLANNING_TIMEOUT_MS": {
        "type": "number",
        "description": "Default timeout for plan execution in milliseconds",
        "required": false,
        "default": 60000
      },
      "PLANNING_EXECUTION_MODEL": {
        "type": "string",
        "description": "Default execution model (sequential, parallel, dag)",
        "required": false,
        "default": "sequential"
      },
      "PLANNING_ENABLE_ADAPTATION": {
        "type": "boolean",
        "description": "Enable adaptive planning during execution",
        "required": false,
        "default": true
      }
    }
  }
}
