{
  "name": "@elizaos/plugin-polymarket",
  "version": "2.0.0-alpha.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "description": "Multi-language Polymarket prediction markets plugin for elizaOS",
  "keywords": [
    "polymarket",
    "prediction-markets",
    "elizaos",
    "plugin",
    "web3",
    "polygon"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/elizaos-plugins/plugin-polymarket"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "types"
  ],
  "dependencies": {
    "@elizaos/core": "workspace:*",
    "@elizaos/plugin-evm": "workspace:*",
    "@polymarket/clob-client": "^4.16.0",
    "viem": "^2.21.0",
    "ws": "^8.17.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/ws": "^8.5.0",
    "bun-types": "^1.2.0",
    "prettier": "3.5.3",
    "typescript": "5.8.2"
  },
  "scripts": {
    "build:prompts": "node ../../packages/prompts/scripts/generate-plugin-prompts.js ./prompts ./typescript/generated/prompts --target all",
    "build": "npm run build:prompts && bun run build.ts",
    "dev": "bun run build.ts --watch",
    "typecheck": "tsc --noEmit -p typescript/tsconfig.json",
    "clean": "rm -rf dist .turbo node_modules .turbo-tsconfig.json *.tsbuildinfo",
    "format": "prettier --write .",
    "format:check": "prettier --check ./typescript",
    "test": "bun test typescript/",
    "test:unit": "bun test typescript/__tests__/unit/",
    "test:integration": "bun test typescript/__tests__/integration/",
    "build:rust": "cd rust && cargo build --release",
    "build:rust:wasm": "cd rust && wasm-pack build --target web --out-dir pkg/web",
    "test:rust": "cd rust && cargo test",
    "lint:rust": "cd rust && cargo clippy --all-targets -- -D warnings",
    "lint:python": "cd python && ruff check . && ruff format --check .",
    "lint:python:fix": "cd python && ruff check --fix . && ruff format .",
    "typecheck:python": "cd python && python3 -m mypy elizaos_plugin_polymarket"
  },
  "peerDependencies": {
    "whatwg-url": "7.1.0"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "POLYMARKET_PRIVATE_KEY": {
        "type": "string",
        "description": "Hex-encoded private key for Polymarket trading on Polygon.",
        "required": true,
        "sensitive": true
      },
      "CLOB_API_URL": {
        "type": "string",
        "description": "Polymarket CLOB API URL.",
        "required": false,
        "default": "https://clob.polymarket.com",
        "sensitive": false
      },
      "CLOB_WS_URL": {
        "type": "string",
        "description": "Polymarket CLOB WebSocket URL for real-time updates.",
        "required": false,
        "default": "wss://ws-subscriptions-clob.polymarket.com/ws/",
        "sensitive": false
      },
      "CLOB_API_KEY": {
        "type": "string",
        "description": "API key for authenticated CLOB operations.",
        "required": false,
        "sensitive": true
      },
      "CLOB_API_SECRET": {
        "type": "string",
        "description": "API secret for authenticated CLOB operations.",
        "required": false,
        "sensitive": true
      },
      "CLOB_API_PASSPHRASE": {
        "type": "string",
        "description": "API passphrase for authenticated CLOB operations.",
        "required": false,
        "sensitive": true
      }
    }
  }
}
