{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "rootDir": ".",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@elizaos/core": ["../../../packages/typescript/dist"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "python",
    "rust",
    "**/__tests__/**",
    "**/*.test.ts"
  ]
}
