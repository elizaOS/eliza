{
  "name": "@elizaos/plugin-n8n",
  "version": "2.0.0-alpha.2",
  "description": "N8n workflow integration plugin with AI-powered plugin creation for ElizaOS",
  "type": "module",
  "main": "dist/node/index.js",
  "module": "dist/node/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elizaos/eliza.git"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "node": {
        "types": "./dist/node/index.d.ts",
        "import": "./dist/node/index.js",
        "default": "./dist/node/index.js"
      },
      "default": "./dist/node/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "dependencies": {
    "@elizaos/core": "workspace:*",
    "fs-extra": "^11.2.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.40.1",
    "@biomejs/biome": "^2.3.11",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.0.3",
    "dotenv": "^17.2.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.0"
  },
  "scripts": {
    "dev": "bun --hot build.ts",
    "clean": "rm -rf dist .turbo node_modules ",
    "format": "bunx @biomejs/biome format --write .",
    "format:check": "bunx @biomejs/biome format .",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test": "bun run test:unit && bun run test:integration",
    "test:unit": "vitest run __tests__/unit/",
    "test:integration": "vitest run __tests__/integration/",
    "test:watch": "vitest",
    "lint": "bunx @biomejs/biome check --write --unsafe .",
    "lint:check": "bunx @biomejs/biome check .",
    "build": "bun run build.ts",
    "build:ts": "bun run build.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": "ElizaOS",
  "keywords": [
    "plugin",
    "elizaos",
    "n8n",
    "ai",
    "plugin-creation",
    "anthropic",
    "claude"
  ],
  "homepage": "https://elizaos.ai",
  "bugs": {
    "url": "https://github.com/elizaos/eliza/issues"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "ANTHROPIC_API_KEY": {
        "type": "string",
        "description": "API key for Anthropic Claude models",
        "required": true,
        "sensitive": true
      },
      "PLUGIN_DATA_DIR": {
        "type": "string",
        "description": "Directory for plugin workspace",
        "required": false,
        "default": "./data"
      },
      "CLAUDE_MODEL": {
        "type": "string",
        "description": "Claude model to use",
        "required": false,
        "default": "claude-3-opus-20240229"
      }
    }
  }
}
