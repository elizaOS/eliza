{
  "name": "@elizaos/plugin-todo",
  "version": "1.0.0",
  "description": "Multi-language Todo list plugin for elizaOS with TypeScript, Python, and Rust implementations",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elizaos-plugins/plugin-todo.git"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "elizaos",
    "plugin",
    "todo",
    "task-management",
    "multi-language"
  ],
  "author": "elizaOS Team",
  "license": "MIT",
  "scripts": {
    "build": "bun run build.ts",
    "build:ts": "bun run build.ts",
    "dev": "bun --hot build.ts",
    "clean": "rm -rf dist .turbo node_modules",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "bunx @biomejs/biome check --write --unsafe .",
    "lint:check": "bunx @biomejs/biome check .",
    "format": "bunx @biomejs/biome format --write .",
    "format:check": "bunx @biomejs/biome format ."
  },
  "dependencies": {
    "@elizaos/core": "workspace:*",
    "drizzle-orm": "^0.30.10",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3",
    "@biomejs/biome": "^2.3.11"
  },
  "peerDependencies": {
    "zod": "^3.24.2",
    "@elizaos/core": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "ENABLE_REMINDERS": {
        "type": "boolean",
        "description": "Enable reminder notifications for todos",
        "required": false,
        "default": true,
        "sensitive": false
      },
      "REMINDER_INTERVAL_MS": {
        "type": "number",
        "description": "Interval in milliseconds between reminder checks",
        "required": false,
        "default": 30000,
        "sensitive": false
      }
    }
  }
}
