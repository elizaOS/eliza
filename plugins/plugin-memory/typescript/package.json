{
  "name": "@elizaos/plugin-memory",
  "version": "1.0.0",
  "description": "Advanced memory management plugin for elizaOS with conversation summarization and long-term persistent memory",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "typescript/src",
    "README.md"
  ],
  "scripts": {
    "build:ts": "bun run build.ts",
    "test": "bun run test:ts",
    "test:ts": "vitest run || echo 'No typescript tests yet'",
    "clean": "rm -rf dist dist .turbo node_modules",
    "lint": "bunx @biomejs/biome check --write .",
    "format": "bunx @biomejs/biome format --write .",
    "typecheck": "bunx tsc --noEmit || true",
    "lint:check": "bunx @biomejs/biome check .",
    "build": "bun run build.ts",
    "dev": "bun --hot build.ts"
  },
  "keywords": [
    "elizaos",
    "ai",
    "agent",
    "memory",
    "summarization",
    "llm",
    "multi-language"
  ],
  "author": "elizaOS Team",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3",
    "@biomejs/biome": "^2.3.11"
  },
  "peerDependencies": {
    "@elizaos/core": "workspace:*",
    "@elizaos/plugin-sql": "workspace:*"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "MEMORY_SUMMARIZATION_THRESHOLD": {
        "type": "number",
        "description": "Number of messages before automatic summarization",
        "required": false,
        "default": 16
      },
      "MEMORY_RETAIN_RECENT": {
        "type": "number",
        "description": "Number of recent messages to retain after summarization",
        "required": false,
        "default": 6
      },
      "MEMORY_LONG_TERM_ENABLED": {
        "type": "boolean",
        "description": "Enable long-term memory extraction",
        "required": false,
        "default": true
      },
      "MEMORY_CONFIDENCE_THRESHOLD": {
        "type": "number",
        "description": "Minimum confidence score to store long-term memories",
        "required": false,
        "default": 0.85
      }
    }
  }
}
