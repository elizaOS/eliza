{
  "extends": "../../tsconfig.build.template.json",
  "compilerOptions": {
    "rootDir": "./typescript",
    "outDir": "./dist/node",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "tsBuildInfoFile": "./dist/tsconfig.node.tsbuildinfo",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["./typescript/**/*.ts"],
  "exclude": ["./typescript/__tests__/**", "./typescript/**/*.test.ts"]
}

